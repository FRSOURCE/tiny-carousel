{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "createRelease": "github",
      "loglevel": "verbose",
      "message": "chore(release): publish [ci skip]",
      "ignoreChanges": [
        "**/README.md",
        "README.md",
        "**/*.test.ts",
        "./package.json",
        "./.github/**"
      ]
    }
  }
}
