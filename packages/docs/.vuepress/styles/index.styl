body
    font-family 'Titillium Web', sans-serif

input, textarea
    font inherit

.fw-normal
    font-weight normal

.badge 
    font-weight 600

.home h1
    display none

:root
    --accentColor $accentColor
    --badgeTipColor lighten($accentColor, 8%)
    --lighten10AccentColor lighten($accentColor, 10%)
    --darken10AccentColor darken($accentColor, 10%)
